<body>
    <div class="container">
        <div class="row">
            <form action="/post-crud" method="POST">
                <div class="form-row"></div>
                <div class="col-12 mt-3">Create Account</div>
                <div class="form-group">
                    <label for="userName">Name</label>
                    <input type="text" class="form-control" name="userName" placeholder="ShoneBi">
                  </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="inputEmail4">Email</label>
                    <input type="text" class="form-control" name="email" placeholder="Email" name="email">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputPassword4">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputAddress">Address</label>
                  <input type="text" class="form-control" name="address" placeholder="1234 Main St">
                </div>
                <div class="form-row">
                  <div class="form-group col-md-8">
                    <label for="inputnumPhone">Phone number</label>
                    <input type="text" class="form-control" name="numPhone">
                  </div>
                  <div class="form-group col-md-4">
                    <label for="inputState">Sex</label>
                    <select name="Gender" class="form-control">
                      <option selected>Choose...</option>
                      <option value="1">Male</option>
                      <option value="0">Female</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
              </form>
        </div>
    </div>
</body>
